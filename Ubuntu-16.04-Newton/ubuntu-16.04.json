{
    "builders": [
        {
            "type": "virtualbox-iso",
            "boot_command": [
	      "<enter><wait>",
              "<f6><esc>",
              "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
              "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
              "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
              "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
              "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
              "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
              "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
              "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
              "<bs><bs><bs>",
              "/install/vmlinuz ",
              "initrd=/install/initrd.gz ",
              "net.ifnames=0 ",
              "auto-install/enable=true ",
              "debconf/priority=critical ",
              "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/ubuntu-16.04-ova/preseed.cfg",
              "<enter>"      
            ],
	    "format": "ova",
            "boot_wait": "5s",
            "disk_size": 30720,
            "guest_os_type": "Ubuntu_64",
            "headless": false,
            "http_directory": "http",
            "iso_urls": [
                "iso/ubuntu-16.04.4-server-amd64.iso"
            ],
            "iso_checksum_type": "sha256",
            "iso_checksum": "0a03608988cfd2e50567990dc8be96fb3c501e198e2e6efcb846d89efc7b89f2",
            "ssh_username": "stack",
            "ssh_password": "stack",
            "ssh_port": 22,
            "ssh_wait_timeout": "3600s",
            "shutdown_command": "echo 'stack'|sudo -S shutdown -P now",
	    "post_shutdown_delay": "120s",
            "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
            "virtualbox_version_file": ".vbox_version",
            "vm_name": "packer-openstack-vm",
            "vboxmanage": [
            [ "modifyvm", "{{.Name}}", "--memory", "8192"],
            [ "modifyvm", "{{.Name}}", "--cpus", "4"],
            [ "modifyvm", "{{.Name}}", "--nic1", "nat"],
            [ "modifyvm", "{{.Name}}", "--nic2", "hostonly", "--hostonlyadapter2", "vboxnet1"]
            ]
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "script": "scripts/init.sh",
            "execute_command": "echo 'stack' | {{.Vars}} sudo -S -E bash '{{.Path}}'"
        },
        {
            "type": "shell",
            "script": "scripts/os_install.sh",
            "execute_command": "echo 'stack' | {{.Vars}} sudo -S -u stack -E bash '{{.Path}}'"
        },
        {
            "type": "shell",
            "script": "scripts/cleanup.sh",
            "execute_command": "echo 'stack' | {{.Vars}} sudo -S -E bash '{{.Path}}'"
        }    
    ]
}
